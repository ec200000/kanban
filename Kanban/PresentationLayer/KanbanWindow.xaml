<Window x:Class="Kanban.PresentationLayer.KanbanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban.PresentationLayer"
        mc:Ignorable="d"
        Title="KanbanWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" ItemsSource="{Binding GridView, Mode=OneWay}" SelectedItem="{Binding Selected}" HorizontalAlignment="Left" Height="368" Margin="10,42,0,0" VerticalAlignment="Top" Width="774" Background="#FFFFFBC8" BorderBrush="#FFC0AB23" />
        <Button Content="Sort by Due Date" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top" Width="110" Background="#FFFEFF9F" Click="Button_Click"/>
        <Button Content="Sort by Creation Time" HorizontalAlignment="Left" Margin="205,10,0,0" VerticalAlignment="Top" Width="120" Background="#FFFEFF9F" Click="Button_Click_1"/>
    </Grid>
</Window>
