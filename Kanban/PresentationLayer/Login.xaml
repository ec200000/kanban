<Window x:Class="Kanban.PresentationLayer.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kanban.PresentationLayer"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid Background="#FF8EC3DA">
        <Label Content="Email:" HorizontalAlignment="Left" Margin="50,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="50,114,0,0" VerticalAlignment="Top"/>
        <TextBox Name="emal" Text="{Binding UserName}" HorizontalAlignment="Left" Height="23" Margin="132,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="Emal_TextChanged"/>
        <PasswordBox Name="pswd" HorizontalAlignment="Left" Margin="132,122,0,0" Height="23" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="111,200,0,0" VerticalAlignment="Top" Width="75" Background="#FFE4D369" Click="Button_Click"/>
    </Grid>
</Window>
